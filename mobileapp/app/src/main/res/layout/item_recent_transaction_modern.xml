<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="12dp"
    app:cardElevation="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_category_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_category_icon_small"
                    android:padding="4dp"
                    android:src="@drawable/ic_bank"
                    app:tint="@color/toscaPrimary" />

                <TextView
                    android:id="@+id/tv_category_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tithe"
                    android:textColor="@color/toscaPrimary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="Tithe" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_transaction_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Dec 15, 2023"
                android:textColor="@color/toscaSecondary"
                android:textSize="12sp"
                tools:text="Dec 15, 2023" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_transaction_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="KES 1,000"
                android:textColor="@color/toscaPrimary"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="KES 1,000" />

            <TextView
                android:id="@+id/tv_transaction_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_status_success"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp"
                android:text="Completed"
                android:textColor="@color/white"
                android:textSize="10sp"
                tools:text="Completed" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
