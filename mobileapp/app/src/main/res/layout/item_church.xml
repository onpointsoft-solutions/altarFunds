<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:strokeColor="@color/toscaSecondary"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Church Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/bg_category_icon"
                android:padding="6dp"
                android:src="@drawable/ic_church"
                app:tint="@color/toscaPrimary" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_church_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Church Name"
                    android:textColor="@color/toscaPrimary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="Grace Community Church" />

                <TextView
                    android:id="@+id/tv_church_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Church Code"
                    android:textColor="@color/toscaSecondary"
                    android:textSize="12sp"
                    tools:text="GCC001" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_verification_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_status_success"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="2dp"
                    android:text="Verified"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    tools:text="Verified" />

                <TextView
                    android:id="@+id/tv_active_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/bg_status_success"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="2dp"
                    android:text="Active"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    tools:text="Active" />

            </LinearLayout>

        </LinearLayout>

        <!-- Church Description -->
        <TextView
            android:id="@+id/tv_church_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Church description"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            tools:text="A vibrant community of believers dedicated to spreading the gospel" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
