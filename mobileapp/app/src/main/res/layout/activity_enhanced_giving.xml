<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_light_background">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary_color"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Category Selection -->
            <LinearLayout
                android:id="@+id/ll_select_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:background="@drawable/card_background"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Select Category"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"
                    android:gravity="center" />

                <Spinner
                    android:id="@+id/spinner_category"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_selected_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:background="@drawable/card_background"
                android:layout_marginBottom="16dp"
                android:visibility="gone">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/bg_category_icon"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/tv_selected_category"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Amount Input Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Amount (KES)"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/et_amount"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="Enter amount"
                    android:textSize="18sp"
                    android:textColor="@color/text_primary"
                    android:background="@drawable/edittext_background"
                    android:padding="12dp"
                    android:inputType="numberDecimal"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tv_amount_preview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="KES 0.00"
                    android:textSize="20sp"
                    android:textColor="@color/primary_color"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:padding="8dp"
                    android:background="@drawable/amount_preview_background"
                    android:layout_marginBottom="12dp" />

                <!-- Quick Amount Buttons -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Quick Amounts"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_amount_100"
                        android:layout_width="0dp"
                        android:layout_height="36dp"
                        android:layout_weight="1"
                        android:text="100"
                        android:textSize="12sp"
                        android:layout_marginEnd="4dp" />

                    <Button
                        android:id="@+id/btn_amount_200"
                        android:layout_width="0dp"
                        android:layout_height="36dp"
                        android:layout_weight="1"
                        android:text="200"
                        android:textSize="12sp"
                        android:layout_marginEnd="4dp" />

                    <Button
                        android:id="@+id/btn_amount_500"
                        android:layout_width="0dp"
                        android:layout_height="36dp"
                        android:layout_weight="1"
                        android:text="500"
                        android:textSize="12sp"
                        android:layout_marginEnd="4dp" />

                    <Button
                        android:id="@+id/btn_amount_1000"
                        android:layout_width="0dp"
                        android:layout_height="36dp"
                        android:layout_weight="1"
                        android:text="1,000"
                        android:textSize="12sp"
                        android:layout_marginEnd="4dp" />

                    <Button
                        android:id="@+id/btn_amount_2000"
                        android:layout_width="0dp"
                        android:layout_height="36dp"
                        android:layout_weight="1"
                        android:text="2,000"
                        android:textSize="12sp"
                        android:layout_marginEnd="4dp" />

                    <Button
                        android:id="@+id/btn_amount_5000"
                        android:layout_width="0dp"
                        android:layout_height="36dp"
                        android:layout_weight="1"
                        android:text="5,000"
                        android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Payment Method Tabs -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Payment Method"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tab_payment_method"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:tabMode="fixed"
                    app:tabGravity="fill">

                    <com.google.android.material.tabs.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="M-Pesa"
                        android:icon="@drawable/ic_mpesa" />

                    <com.google.android.material.tabs.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Airtel"
                        android:icon="@drawable/ic_airtel" />

                    <com.google.android.material.tabs.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Card"
                        android:icon="@drawable/ic_credit_card" />

                    <com.google.android.material.tabs.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="USSD"
                        android:icon="@drawable/ic_ussd" />

                    <com.google.android.material.tabs.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="QR Code"
                        android:icon="@drawable/ic_qr_code" />

                </com.google.android.material.tabs.TabLayout>

                <!-- Payment Method Options -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- M-Pesa Options -->
                    <LinearLayout
                        android:id="@+id/ll_mpesa_options"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:visibility="visible">

                        <EditText
                            android:id="@+id/et_phone_number"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:hint="M-Pesa phone number"
                            android:textSize="14sp"
                            android:background="@drawable/edittext_background"
                            android:padding="12dp"
                            android:inputType="phone"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Standard M-Pesa rates apply"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary"
                            android:gravity="center"
                            android:padding="8dp" />

                    </LinearLayout>

                    <!-- Airtel Options -->
                    <LinearLayout
                        android:id="@+id/ll_airtel_options"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:visibility="gone">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:hint="Airtel Money phone number"
                            android:textSize="14sp"
                            android:background="@drawable/edittext_background"
                            android:padding="12dp"
                            android:inputType="phone"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Standard Airtel Money rates apply"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary"
                            android:gravity="center"
                            android:padding="8dp" />

                    </LinearLayout>

                    <!-- Card Options -->
                    <LinearLayout
                        android:id="@+id/ll_card_options"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Card payment will be processed securely"
                            android:textSize="14sp"
                            android:textColor="@color/text_secondary"
                            android:gravity="center"
                            android:padding="8dp"
                            android:layout_marginBottom="8dp" />

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:text="Add New Card"
                            android:textSize="14sp"
                            android:layout_marginBottom="8dp" />

                    </LinearLayout>

                    <!-- USSD Options -->
                    <LinearLayout
                        android:id="@+id/ll_ussd_options"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Dial *123456# to give via USSD"
                            android:textSize="14sp"
                            android:textColor="@color/text_secondary"
                            android:gravity="center"
                            android:padding="8dp"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Follow the prompts to complete your donation"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary"
                            android:gravity="center"
                            android:padding="8dp" />

                    </LinearLayout>

                    <!-- QR Options -->
                    <LinearLayout
                        android:id="@+id/ll_qr_options"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Generate QR code for instant giving"
                            android:textSize="14sp"
                            android:textColor="@color/text_secondary"
                            android:gravity="center"
                            android:padding="8dp"
                            android:layout_marginBottom="8dp" />

                        <Button
                            android:id="@+id/btn_generateqr"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:text="Generate QR Code"
                            android:textSize="14sp"
                            android:layout_marginBottom="8dp" />

                    </LinearLayout>

                </FrameLayout>

            </LinearLayout>

            <!-- Options Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:gravity="center_vertical">

                    <Switch
                        android:id="@+id/switch_anonymous"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Give anonymously"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:gravity="center_vertical">

                    <Switch
                        android:id="@+id/switch_recurring"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Recurring giving"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary" />

                </LinearLayout>

            </LinearLayout>

            <!-- Recurring Options -->
            <LinearLayout
                android:id="@+id/ll_recurring_options"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Recurring Frequency"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <Spinner
                    android:id="@+id/spinner_frequency"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Start Date"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Today"
                    android:textSize="14sp"
                    android:textColor="@color/text_primary"
                    android:background="@drawable/edittext_background"
                    android:padding="12dp"
                    android:gravity="center"
                    android:layout_marginBottom="12dp" />

                <Button
                    android:id="@+id/btn_setup_recurring"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Setup Recurring Giving"
                    android:textSize="14sp" />

            </LinearLayout>

            <!-- Notes Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Notes (Optional)"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/et_notes"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:hint="Add any notes or prayer requests"
                    android:textSize="14sp"
                    android:background="@drawable/edittext_background"
                    android:padding="12dp"
                    android:inputType="textMultiLine"
                    android:gravity="top" />

            </LinearLayout>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_initiate_payment"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:text="Give Now"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/btn_generate_qr"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:text="Generate QR"
                    android:textSize="16sp"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

            <!-- Anonymous Note -->
            <TextView
                android:id="@+id/tv_anonymous_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your donation will be completely anonymous"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:gravity="center"
                android:padding="8dp"
                android:background="@drawable/warning_background"
                android:layout_marginBottom="16dp"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Recent Transactions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Recent Transactions"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_recent_transactions"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="8dp" />

        </LinearLayout>

        <!-- Recurring Giving -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Active Recurring Giving"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_recurring_giving"
                android:layout_width="match_parent"
                android:layout_height="200dp" />

        </LinearLayout>
</LinearLayout>
    </ScrollView>

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
