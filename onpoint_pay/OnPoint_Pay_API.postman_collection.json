{
	"info": {
		"_postman_id": "onpoint-pay-api-collection",
		"name": "OnPoint Pay API",
		"description": "Complete API collection for OnPoint Pay payment gateway - Kenya's premier payment solution with M-Pesa integration",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
		"_exporter_id": "onpoint-pay-exporter"
	},
	"item": [
		{
			"name": "Authentication",
			"item": [
				{
					"name": "Register Merchant",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"// Test merchant registration",
									"pm.test(\"Merchant registered successfully\", function () {",
									"    pm.response.to.have.status(201);",
									"    pm.response.to.have.jsonBody('message');",
									"    pm.response.to.have.jsonBody('merchant');",
									"    pm.response.to.have.jsonBody('tokens');",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"business_name\": \"Test Business\",\n    \"business_email\": \"test@business.com\",\n    \"business_phone\": \"+254712345678\",\n    \"first_name\": \"John\",\n    \"last_name\": \"Doe\",\n    \"password\": \"TestPassword123\",\n    \"confirm_password\": \"TestPassword123\",\n    \"business_description\": \"Test business for API testing\",\n    \"business_address\": \"Nairobi, Kenya\",\n    \"business_type\": \"Technology\",\n    \"registration_number\": \"BN-123456\",\n    \"tax_identification\": \"KRA-123456\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/v1/auth/register/"
						}
					},
					"response": []
				},
				{
					"name": "Login Merchant",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"// Test merchant login",
									"pm.test(\"Login successful\", function () {",
									"    pm.response.to.have.status(200);",
									"    pm.response.to.have.jsonBody('message');",
									"    pm.response.to.have.jsonBody('merchant');",
									"    pm.response.to.have.jsonBody('tokens');",
									"    ",
									"    // Store tokens for subsequent requests",
									"    if (pm.response.json().tokens) {",
									"        pm.collectionVariables.set('access_token', pm.response.json().tokens.access);",
									"        pm.collectionVariables.set('refresh_token', pm.response.json().tokens.refresh);",
									"    }",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"test@business.com\",\n    \"password\": \"TestPassword123\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/v1/auth/login/"
						}
					},
					"response": []
				},
				{
					"name": "Get Merchant Profile",
					"event": [
						{
							"listen": "prerequest",
							"script": {
								"exec": [
									"// Add JWT token to headers",
									"if (pm.collectionVariables.get('access_token')) {",
									"    pm.request.headers.add({",
									"        'Authorization': 'Bearer ' + pm.collectionVariables.get('access_token'),",
									"        'Content-Type': 'application/json'",
									"    });",
									"}"
								],
								"type": "text/javascript"
							}
						},
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Profile retrieved successfully\", function () {",
									"    pm.response.to.have.status(200);",
									"    pm.response.to.have.jsonBody('business_name');",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/v1/auth/profile/"
						}
					},
					"response": []
				},
				{
					"name": "Logout",
					"event": [
						{
							"listen": "prerequest",
							"script": {
								"exec": [
									"// Add JWT token to headers",
									"if (pm.collectionVariables.get('access_token')) {",
									"    pm.request.headers.add({",
									"        'Authorization': 'Bearer ' + pm.collectionVariables.get('access_token'),",
									"        'Content-Type': 'application/json'",
									"    });",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"refresh_token\": \"{{refresh_token}}\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/v1/auth/logout/"
						}
					},
					"response": []
				}
			]
		},
		{
			"name": "API Keys Management",
			"item": [
				{
					"name": "Create API Key",
					"event": [
						{
							"listen": "prerequest",
							"script": {
								"exec": [
									"// Add JWT token to headers",
									"if (pm.collectionVariables.get('access_token')) {",
									"    pm.request.headers.add({",
									"        'Authorization': 'Bearer ' + pm.collectionVariables.get('access_token'),",
									"        'Content-Type': 'application/json'",
									"    });",
									"}"
								],
								"type": "text/javascript"
							}
						},
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"API key created successfully\", function () {",
									"    pm.response.to.have.status(201);",
									"    pm.response.to.have.jsonBody('name');",
									"    pm.response.to.have.jsonBody('public_key');",
									"    pm.response.to.have.jsonBody('secret_key');",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"name\": \"Production Key\",\n    \"key_type\": \"public\",\n    \"permissions\": {\n        \"payments\": [\"create\", \"read\"],\n        \"refunds\": [\"create\"]\n    },\n    \"allowed_ips\": [\"127.0.0.1\", \"::1\"],\n    \"allowed_domains\": [\"yourdomain.com\"]\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/v1/auth/api-keys/"
						}
					},
					"response": []
				},
				{
					"name": "List API Keys",
					"event": [
						{
							"listen": "prerequest",
							"script": {
								"exec": [
									"// Add JWT token to headers",
									"if (pm.collectionVariables.get('access_token')) {",
									"    pm.request.headers.add({",
									"        'Authorization': 'Bearer ' + pm.collectionVariables.get('access_token'),",
									"        'Content-Type': 'application/json'",
									"    });",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/v1/auth/api-keys/"
						}
					},
					"response": []
				}
			]
		},
		{
			"name": "Payments",
			"item": [
				{
					"name": "Initiate M-Pesa Payment",
					"event": [
						{
							"listen": "prerequest",
							"script": {
								"exec": [
									"// Use API key for payment endpoints",
									"pm.request.headers.add({",
									"    'Authorization': 'Bearer {{secret_key}}',",
									"    'Content-Type': 'application/json'",
									"});"
								],
								"type": "text/javascript"
							}
						},
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"M-Pesa payment initiated\", function () {",
									"    pm.response.to.have.status(201);",
									"    pm.response.to.have.jsonBody('success');",
									"    pm.response.to.have.jsonBody('transaction');",
									"    pm.response.to.have.jsonBody('payment_details');",
									"    ",
									"    // Store transaction reference for status check",
									"    if (pm.response.json().transaction) {",
									"        pm.collectionVariables.set('transaction_reference', pm.response.json().transaction.reference);",
									"        pm.collectionVariables.set('checkout_request_id', pm.response.json().payment_details.checkout_request_id);",
									"    }",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"amount\": 100.00,\n    \"currency\": \"KES\",\n    \"payment_method\": \"mpesa\",\n    \"phone\": \"254712345678\",\n    \"email\": \"customer@example.com\",\n    \"reference\": \"ORDER-\" + pm.variables.replaceIn('{{$randomPhoneNumber}}', '123456'),\n    \"callback_url\": \"https://yourdomain.com/webhook\",\n    \"metadata\": {\n        \"order_id\": \"12345\",\n        \"customer_name\": \"John Doe\",\n        \"product\": \"Test Product\"\n    }\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/v1/payments/initiate/"
						}
					},
					"response": []
				},
				{
					"name": "Check Payment Status",
					"event": [
						{
							"listen": "prerequest",
							"script": {
								"exec": [
									"// Use API key and transaction reference",
									"pm.request.headers.add({",
									"    'Authorization': 'Bearer {{secret_key}}',",
									"    'Content-Type': 'application/json'",
									"});"
								],
								"type": "text/javascript"
							}
						},
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Payment status retrieved\", function () {",
									"    pm.response.to.have.status(200);",
									"    pm.response.to.have.jsonBody('success');",
									"    pm.response.to.have.jsonBody('transaction');",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"reference\": \"{{transaction_reference}}\",\n    \"payment_method\": \"mpesa\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/v1/payments/status/"
						}
					},
					"response": []
				},
				{
					"name": "Get Transaction History",
					"event": [
						{
							"listen": "prerequest",
							"script": {
								"exec": [
									"// Use API key",
									"pm.request.headers.add({",
									"    'Authorization': 'Bearer {{secret_key}}',",
									"    'Content-Type': 'application/json'",
									"});"
								],
								"type": "text/javascript"
							}
						},
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Transaction history retrieved\", function () {",
									"    pm.response.to.have.status(200);",
									"    pm.response.to.have.jsonBody('count');",
									"    pm.response.to.have.jsonBody('results');",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/v1/payments/transactions/?status=completed&payment_method=mpesa&limit=10"
						}
					},
					"response": []
				},
				{
					"name": "Refund Payment",
					"event": [
						{
							"listen": "prerequest",
							"script": {
								"exec": [
									"// Use API key",
									"pm.request.headers.add({",
									"    'Authorization': 'Bearer {{secret_key}}',",
									"    'Content-Type': 'application/json'",
									"});"
								],
								"type": "text/javascript"
							}
						},
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Refund processed\", function () {",
									"    pm.response.to.have.status(200);",
									"    pm.response.to.have.jsonBody('success');",
									"    pm.response.to.have.jsonBody('refund_transaction');",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"reference\": \"{{transaction_reference}}\",\n    \"amount\": 50.00,\n    \"reason\": \"Customer requested refund\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/v1/payments/refund/"
						}
					},
					"response": []
				}
			]
		},
		{
			"name": "Webhooks Testing",
			"item": [
				{
					"name": "M-Pesa STK Callback",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"Body\": {\n        \"stkCallback\": {\n            \"MerchantRequestID\": \"12345-67890\",\n            \"CheckoutRequestID\": \"ws_CO_{{$randomInt}}123456789\",\n            \"ResultCode\": \"0\",\n            \"ResultDesc\": \"The service request is processed successfully.\",\n            \"CallbackMetadata\": {\n                \"Item\": [\n                    {\n                        \"Name\": \"Amount\",\n                        \"Value\": 100\n                    },\n                    {\n                        \"Name\": \"MpesaReceiptNumber\",\n                        \"Value\": \"LGR123456789\"\n                    },\n                    {\n                        \"Name\": \"TransactionDate\",\n                        \"Value\": \"20240116120000\"\n                    },\n                    {\n                        \"Name\": \"PhoneNumber\",\n                        \"Value\": \"254712345678\"\n                    }\n                ]\n            }\n        }\n    }\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/v1/payments/mpesa/callback/"
						}
					},
					"response": []
				},
				{
					"name": "M-Pesa C2B Confirmation",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"TransactionType\": \"Pay Bill\",\n    \"TransID\": \"LGR123456789\",\n    \"TransTime\": \"20240116120000\",\n    \"TransAmount\": \"100.00\",\n    \"BusinessShortCode\": \"174379\",\n    \"BillRefNumber\": \"ORDER-123\",\n    \"InvoiceNumber\": \"\",\n    \"OrgAccountBalance\": \"5000.00\",\n    \"ThirdPartyTransID\": \"\",\n    \"MSISDN\": \"254712345678\",\n    \"FirstName\": \"John\",\n    \"MiddleName\": \"\",\n    \"LastName\": \"Doe\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/v1/payments/mpesa/confirmation/"
						}
					},
					"response": []
				}
			]
		}
	],
	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					"// Global pre-request script",
					"console.log('Request sent to: ' + pm.request.url.raw);"
				]
			}
		}
	],
