		},
		{
			"key": "secret_key",
			"value": "sk_your_secret_key_here",
			"type": "string"
		},
		{
			"key": "transaction_reference",
			"value": "",
			"type": "string"
		},
		{
			"key": "checkout_request_id",
			"value": "",
			"type": "string"
		}
	]
}
